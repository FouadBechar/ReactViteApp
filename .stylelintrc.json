{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "config"
        ]
      }
    ],
    "block-no-empty": true,
    "color-no-invalid-hex": true
  ,
    "no-descending-specificity": null
  },
  "ignoreFiles": ["**/node_modules/**", "dist/**"]
}
